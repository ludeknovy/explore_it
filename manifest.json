{
  "name": "Explore it!",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Extension supporting exploratory testing",
  "homepage_url": "http://me.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "background": {
  "scripts": [
    "src/bg/proxy_form_controller.js",
    "src/bg/proxy_error_handler.js",
    "src/bg/background.js"
  ]
},
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "proxy",
    "tabs",
    "<all_urls>"
  ]
}
